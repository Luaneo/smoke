// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider          = "mysql"
  url               = env("DATABASE_URL")
  shadowDatabaseUrl = env("SHADOW_DATABASE_URL")
}

enum SmokeType {
  CIGS
  PODS
  DISPOSABLE
}

model User {
  id         Int         @id
  lives      Int         @default(5)
  smokeType  SmokeType
  cigs       Cigs?
  pods       Pods?
  disposable Disposable?
  smokeDates SmokeDate[]
  smokedFor  Int

  // personal info
  age Int?
  sex Sex?
}

enum Sex {
  MALE
  FEMALE
}

model SmokeDate {
  id     Int      @id
  date   DateTime @default(now())
  user   User     @relation(fields: [userId], references: [id])
  userId Int
}

model Cigs {
  packPrice  Int
  cigsPerDay Int
  user       User @relation(fields: [userId], references: [id])
  userId     Int  @unique
}

model Pods {
  juicePrice         Int
  juicePerMonth      Int
  vaporizerPrice     Int
  vaporizersPerMonth Int
  user               User @relation(fields: [userId], references: [id])
  userId             Int  @unique
}

model Disposable {
  disposablePrice     Int
  disposablesPerMonth Int
  user                User @relation(fields: [userId], references: [id])
  userId              Int  @unique
}
